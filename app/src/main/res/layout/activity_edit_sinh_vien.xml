<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".btvnb8.EditSinhVienActivity">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#FFDF40">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa sinh viên"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <EditText
            android:id="@+id/edtName"
            android:layout_marginTop="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@drawable/ic_edittext"/>

        <EditText
            android:id="@+id/edtAdress"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/edtName"
            app:layout_constraintStart_toStartOf="@id/edtName"
            app:layout_constraintEnd_toEndOf="@id/edtName"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@drawable/ic_edittext"/>

        <EditText
            android:id="@+id/edtPhone"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/edtAdress"
            app:layout_constraintStart_toStartOf="@id/edtAdress"
            app:layout_constraintEnd_toEndOf="@id/edtAdress"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:background="@drawable/ic_edittext"/>

        <TextView
            android:id="@+id/btnSave"
            app:layout_constraintTop_toBottomOf="@id/edtPhone"
            app:layout_constraintStart_toStartOf="@id/edtPhone"
            app:layout_constraintEnd_toEndOf="@id/edtPhone"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:text="Lưu"
            android:gravity="center"
            android:background="@drawable/ic_button"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#FFFFFF"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>