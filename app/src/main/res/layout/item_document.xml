<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivDocument"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_document"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="9dp"
        android:layout_marginTop="23dp"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:text="Tổng hợp tin tức thời sự"
        android:layout_marginStart="17dp"
        app:layout_constraintStart_toEndOf="@id/ivDocument"
        app:layout_constraintTop_toTopOf="@id/ivDocument"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginEnd="7dp"/>

    <TextView
        android:id="@+id/tvContent"
        android:text="Tổng hợp tin tức thời sự nóng hổi nhất, của tất cả các ..."
        android:layout_marginStart="17dp"
        app:layout_constraintStart_toEndOf="@id/ivDocument"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"/>

    <View
        android:id="@+id/vDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvContent"
        android:layout_marginTop="17dp"
        android:background="#ACA5A5"
        />



</androidx.constraintlayout.widget.ConstraintLayout>